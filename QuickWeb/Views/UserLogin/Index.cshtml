
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0">
    <title>snake后台登录</title>
    <link href="~/Content/admin/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/Content/admin/css/font-awesome.min.css?v=4.4.0" rel="stylesheet">
    <link href="~/Content/admin/css/animate.min.css" rel="stylesheet">
    <link href="~/Content/admin/css/style.min.css" rel="stylesheet">
    <link href="~/Content/admin/css/login.min.css" rel="stylesheet">
    <!--[if lt IE 9]>
        <meta http-equiv="refresh" content="0;ie.html" />
    <![endif]-->
    <script>
        if (window.top !== window.self) { window.top.location = window.location };
    </script>
</head>
<body class="signin">
    <div class="signinpanel">
        <div class="row">
            <div class="col-sm-7">
                <div class="signin-info">
                    <div class="logopanel m-b"></div>
                    <div class="m-b"></div>
                    <h4>欢迎使用 <strong>snake</strong> 后台管理系统！</h4>
                    <ul class="m-b"></ul>
                </div>
            </div>
            <div class="col-sm-5">
                <form class="">
                    <p class="m-t-md" id="err_msg">登录到 snake 后台</p>
                    <input type="text" class="form-control uname" placeholder="用户名" id="user_name" />
                    <input type="password" class="form-control pword m-b" placeholder="密码" id="password" />
                    <div style="margin-bottom:70px">
                        <input type="text" class="form-control" placeholder="验证码" style="color:black;width:120px;float:left;margin:0px 0px;" name="code" id="code" />
                        <img id="verify" src="@Url.Action("VerifyCode","Public")" onclick="javascript:this.src='@Url.Action("VerifyCode","Public")?tm='+Math.random();" style="float:right;cursor: pointer" />
                    </div>
                    <input class="btn btn-success btn-block" id="login_btn" value="登录" />
                </form>
            </div>
        </div>
        <div class="signup-footer">
            <div class="" style="text-align:center;">
                武汉一世计科软件有限公司 &copy; @(DateTime.Now.Year - 2)-@(DateTime.Now.Year) All Rights Reserved. snake
            </div>
        </div>
    </div>
    <script src="~/Content/admin/js/jquery.min.js?v=2.1.4"></script>
    <script src="~/Content/admin/js/bootstrap.min.js?v=3.3.6"></script>
    <script type="text/javascript">
        document.onkeydown = function (event) {
            var e = event || window.event || arguments.callee.caller.arguments[0];
            if (e && e.keyCode == 13) { // enter 键
                $('#login_btn').click();
            }
        };
        var lock = false;
        $(function () {
            $('#login_btn').click(function () {
                if (lock) {
                    return;
                }
                lock = true;
                $('#err_msg').hide();
                $('#login_btn').removeClass('btn-success').addClass('btn-danger').val('登陆中...');
                var username = $('#user_name').val();
                var password = $('#password').val();
                var code = $('#code').val();
                $.post("@Url.Action("Login")", { 'user_name': username, 'password': password, 'code': code }, function (res) {
                    lock = false;
                    $('#login_btn').val('登录').removeClass('btn-danger').addClass('btn-success');
                    if (res.status != 1) {
                        $('#verify').attr('src', '@Url.Action("VerifyCode","Public")?tm=' + Math.random());
                        $('#code').val('');
                        $('#err_msg').show().html("<span style='color:red'>" + res.msg + "</span>");
                        return;
                    } else {
                        window.location.href = "@Url.Action("Index","Home",new { area = "admin"})";
                    }
                });
            });
        });
    </script>
</body>
</html>
